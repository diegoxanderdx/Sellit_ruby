<div class= "bg-white flex justify-between items-center px-2">
  <%= link_to products_path do %>
    <h1 class= "text-2xl font-bold text-blue-900"><%= t('app_name') %></h1>
  <% end %>
  <div>
    <%= link_to t('.add'), new_product_path, class: "mx-2 text-orange-500 font-bold" if Current.user %>
    <%= link_to t('.favorites'), favorites_path, class: "mx-2 text-orange-500 font-bold" if Current.user %>
    <%= link_to t('.login'), new_session_path, class: "mx-2 text-orange-500 font-bold" unless Current.user%>
    <%= link_to t('.register'), new_user_path, class: "mx-2 text-orange-500 font-bold" unless Current.user%>
    <%= link_to t('.logout'), session_path(Current.user.id), data: {
      turbo_method: :delete,
      turbo_confirm: t('common.confirm')
    }, class: "mx-2 text-blue-900" if Current.user %>
  </div>
</div>